{
  "name": "electron-app",
  "version": "1.0.0",
  "description": "",
  "main": "./build/main.js",
  "build": {
    "appId": "app.sms.twilio",
    "productName": "Twilio SMS App",
    "extends": null,
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "../react-app/build"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "deb"
    }
  },
  "scripts": {
    "compile-electron-ts": "tsc --build",
    "start-electron": "npm run compile-electron-ts && set ELECTRON_START_URL=http://localhost:3000 && electron ./build/main.js",
    "build-electron-mac": "npm run compile-electron-ts && electron-builder -m -c.extraMetadata.main=build/main.js",
    "build-electron-win": "npm run compile-electron-ts && electron-builder -w -c.extraMetadata.main=build/main.js",
    "build-electron-lin": "npm run compile-electron-ts && electron-builder -l -c.extraMetadata.main=build/main.js"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "electron": "^16.0.1",
    "electron-builder": "^22.14.5",
    "typescript": "^4.5.2"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^10.0.0"
  }
}
