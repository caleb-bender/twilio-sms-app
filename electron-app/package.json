{
  "name": "electron-app",
  "version": "1.0.0",
  "description": "",
  "main": "./build/main.js",
  "build": {
    "appId": "app.sms.twilio",
    "productName": "Twilio SMS App",
    "extends": null,
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "../react-app/build"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "deb"
    }
  },
  "homepage": "./",
  "scripts": {
    "compile-electron-ts": "tsc --build",
    "start-electron": "npm run compile-electron-ts && set ELECTRON_START_URL=http://localhost:3000 && electron ./build/main.js",
    "build-electron-mac": "npm run compile-electron-ts && electron-builder -m -c.extraMetadata.main=build/main.js",
    "build-electron-win": "npm run compile-electron-ts && electron-builder -w -c.extraMetadata.main=build/main.js",
    "build-electron-lin": "npm run compile-electron-ts && electron-builder -l -c.extraMetadata.main=build/main.js",
    "test": "jest ./test"
  },
  "devDependencies": {
    "@babel/core": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@babel/preset-typescript": "^7.16.5",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^27.0.3",
    "@types/joi": "^17.2.3",
    "@types/node": "^16.11.10",
    "@types/twilio": "^3.19.3",
    "babel-jest": "^27.4.5",
    "electron": "^16.0.1",
    "electron-builder": "^22.14.5",
    "ts-jest": "^27.1.1",
    "typescript": "^4.5.2"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "appdata-path": "^1.0.0",
    "dotenv": "^10.0.0",
    "jest": "^27.3.1",
    "joi": "^17.4.2",
    "twilio": "^3.71.3"
  }
}
